<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.kunyuanzhihui.ifullcaretv"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.usb.host"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.StartpageActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.StandByActivity"/>
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.DetailActivity"/>
        <activity android:name=".activity.GovernmentServiceActivity"/>
        <activity android:name=".activity.MoreServiceActivity"/>
        <activity android:name=".activity.HomeapplianceActivity"/>
        <activity android:name=".activity.HouseholdActivity"/>
        <activity android:name=".activity.HutchdefendsActivity"/>
        <activity android:name=".activity.LightingActivity"/>
        <activity android:name=".activity.RegisterActivity"/>
        <activity
            android:name=".activity.CharacterManagerActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".activity.AddCharacterActivity"/>
        <activity android:name=".activity.FamilyListActivity"/>
        <activity android:name=".activity.HealthShopActivity"/>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>