<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@mipmap/btn_bg"
    >

    <com.kunyuanzhihui.ifullcaretv.widget.CircleImageView
        android:id="@+id/iv_chanager_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/head1"
        android:scaleType="fitCenter"/>

    <TextView
    android:id="@+id/tv_chanager_name"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/iv_head"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_toEndOf="@+id/iv_chanager_head"
    android:singleLine="true"
    android:text="奶奶"
    android:gravity="center"
    android:textColor="@color/white"
    android:textSize="20dp"/>


</RelativeLayout>